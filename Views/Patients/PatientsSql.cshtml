<body style="padding: 10px">
    <div class="col-xs-8" col-xs-offset-2>
        <div class="panel-heading">
            <h3>Employee Search</h3>
        </div>
        <form asp-controller="Patients" asp-action="PatientsSql">
            <div>
                <label for="patientid">PatientID</label>
                <br />
                <input type="number" name="patientid" placeholder="PatientID" />
            </div>
            <div>
                <label for="name">Name</label>
                <br />
                <input type="text" name="name" placeholder="Name" />
            </div>
            <br />
            <div>
                <label for="gender">Gender</label>
                <br />
                <input type="text" name="gender" placeholder="Gender" />
            </div>
            <br />
            <div>
                <label for="address">Address</label>
                <br />
                <input type="text" name="address" placeholder="Address" />
            </div>
            <br />
            <div>
                <label for="phonenr">Phonenr</label>
                <br />
                <input type="number" name="phonenr" placeholder="Phonenr" />
            </div>
            <br />
            <div>
                <label for="birthdate">BirthDate</label>
                <br />
                <input type="text" name="birthdate" placeholder="BirthDate" />
            </div>
            <br />
            <div>
                <label for="doctorid">DoctorID</label>
                <br />
                <input type="number" name="doctorid" placeholder="DoctorID" />
            </div>
            <br />
            <div>
                <label for="condition">Condition</label>
                <br />
                <input type="number" name="condition" placeholder="Condition" />
            </div>
            <br />
            <div>
                <label for="date_checked_in">Date_Checked_In</label>
                <br />
                <input type="text" name="date_checked_in" placeholder="Date_Checked_In" />
            </div>
            <br />
            <div>
                <label for="discharge_date">Discharge_Date</label>
                <br />
                <input type="text" name="discharge_date" placeholder="Discharge_Date" />
            </div>
            <br />
            <div>
                <label for="wardid">WardiD</label>
                <br />
                <input type="number" name="wardid" placeholder="WarID" />
            </div>
            <br />
            <input type="submit" value="PatientsSql" />
        </form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">PatientID</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phonenr</th>
                    <th scope="col">BirthDate</th>
                    <th scope="col">DoctorID</th>
                    <th scope="col">Condition</th>
                    <th scope="col">Date_Checked_In</th>
                    <th scope="col">Discharge_Date</th>
                    <th scope="col">WardID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.PatientID</td>
                        <td>@patient.Name</td>
                        <td>@patient.Address</td>
                        <td>@patient.Phonenr</td>
                        <td>@patient.BirthDate</td>
                        <td>@patient.DoctorID</td>
                        <td>@patient.Condition</td>
                        <td>@patient.Date_Checked_In</td>
                        <td>@patient.Discharge_Date</td>
                        <td>@patient.WardID</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>